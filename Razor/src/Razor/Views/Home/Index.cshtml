@model Product
@{ 
    ViewBag.Title = "Product Name";
 }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <tile>
        Index
    </tile>
</head>
<body>
    <div data-productid="@Model.ProductID" data-stocklevel="@ViewBag.Stock">
        <p>Product Name: @Model.Name</p>
        <p>Product Price: @($"The Price is: {Model.Price:c2} ")</p>
        <p>Stock Level:
        @switch ((int)@ViewBag.Stock)
        {
            case 0:
                @: <b>Out of Stock</b>
                break;
            case 1:
            case 2:
            case 3:
                    <b>Low Stock(@ViewBag.Stock)</b>
                break;
            default:
                @: @ViewBag.Stock in Stock 
                break;
        }
         </p>
        <p>
            @if (@ViewBag.Stock == 0)
            {
                @: Out OF stock
            }
            else if (@ViewBag.Stock > 0 && @ViewBag.Stock <= 3)
            {
                <b>Low Stock(@ViewBag.Stock)</b>
            }
            else { 

                @: @ViewBag.Stock in stock
            }
        </p>
    </div>
</body>
</html>